<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2022-05-14--0001-task" author="dsmirnov">

        <!-- Проверяем нет ли уже таблицы с таким названием -->
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="task"/>
            </not>
        </preConditions>

        <!-- Создаем таблицу -->
        <createTable tableName="task">

            <!-- Описываем колонки -->
            <column name="id"
                    type="NUMERIC(19,0)"
                    autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="author_id" type="NUMERIC(19,0)">
                <constraints nullable="false" foreignKeyName="fk_task_author" references="author(id)"
                             deleteCascade="true"/>
            </column>

            <column name="importance_id" type="NUMERIC(19,0)">
                <constraints nullable="false" foreignKeyName="fk_task_importance" references="importance(id)"
                             deleteCascade="true"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>